             x:Class="GPSyMapas.MainPage">

    <StackLayout Orientation="Vertical" VerticalOptions="Center" HorizontalOptions="Center">
        <Label Text="GPS y Mapas" FontSize="45"/>
        <Button Text="GPS" x:Name="btnGPS" Clicked="btnGPS_Clicked"/>
        <Button Text="Mapas" x:Name="btnMapas" Clicked="btnMapas_Clicked"/>
    </StackLayout>

</ContentPage>
